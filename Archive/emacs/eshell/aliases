# Aliases for emacs commands
alias ff find-file $1

# Aliasing standard shell commands to better emacs alternatives
alias less view-file $1

# Changing "ls" to "exa"
  ls = "colorls";
  la = "colorls -a";
  ".." = "cd .. && ls";
  "f" = "fzf --print0 | xargs -0 -o vim";
alias ls colorls $*  # my preferred listing
alias la colorls - $*  # all files and dirs
alias ll colorls -l $*  # long format
alias lt colorls -aT $*  # tree listing
alias l. colorls -a1 $* | grep "^\." # list hidden files

# Merge Xresources
alias merge xrdb -merge ~/.Xresources

# Confirm before overwriting something
alias cp cp -i $1
alias mv mv -i $1
alias rm rm -i $1

# Bare git repo alias for dotfiles
alias config /usr/bin/git --git-dir=$HOME/dotfiles --work-tree=$HOME $*
